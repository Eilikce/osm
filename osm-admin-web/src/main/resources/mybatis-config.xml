<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- default setting-->
    <settings>
    	<!-- 对在此配置文件下的所有cache 进行全局性开/关设置。 -->
        <setting name="cacheEnabled" value="true" />

        <!-- lazy loading-->
        <!-- 全局性设置懒加载。如果设为‘false’，则所有相关联的都会被初始化加载。 -->
        <setting name="lazyLoadingEnabled" value="true" />
        <!-- 当设置为‘true’的时候，懒加载的对象可能被任何懒属性全部加载。否则，每个属性都按需加载。 -->
        <setting name="aggressiveLazyLoading" value="true" />

		<!-- 允许JDBC 生成主键。需要驱动器支持。如果设为了true，
			这个设置将强制使用被生成的主键，有一些驱动器不兼容不过仍然可以执行。 -->
        <setting name="useGeneratedKeys" value="true" />

        <!-- don't need "REUSE" because preparedStatements are cached  at dbcp  -->
        <!-- 配置和设定执行器，
        	SIMPLE 执行器执行其它语句。
        	REUSE 执行器可能重复使用prepared statements 语句，
        	BATCH执行器可以重复执行语句和批量更新。 -->
        <setting name="defaultExecutorType" value="SIMPLE" />

        <!--defaultQueryTiemout. unit is second -->
        <!-- 设置一个时限，以决定让驱动器等待数据库回应的多长时间为超时 -->
        <setting name="defaultStatementTimeout" value="5" />
        <!--undersocre mapping of DB table  -->
        <!-- [是否 启用  数据中 A_column 自动映射 到 java类中驼峰命名的属性 default:fasle] -->  
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    
    <typeAliases>
        <typeAlias type="com.eilikce.osm.entity.admin.AdminPo" alias="Admin"/>
        <typeAlias type="com.eilikce.osm.entity.admin.AccountPo" alias="Account"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.RecordOrderPo" alias="RecordOrder"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.RecordOrderCommodityPo" alias="RecordOrderCommodity"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.RecordOrderFurtherPo" alias="RecordOrderFurther"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.CommodityGroupPo" alias="CommodityGroup"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.CommodityGroupItemPo" alias="CommodityGroupItem"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.CommodityItemPo" alias="CommodityItem"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.CommodityPo" alias="Commodity"/>
        <typeAlias type="com.eilikce.osm.entity.consumer.CommodityFurtherPo" alias="CommodityFurther"/>
    </typeAliases>

</configuration>
